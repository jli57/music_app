<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <h1><a href="<%=bands_url%>">My Music App</a></h1>
      <section class="login_info">
        <% if logged_in? %>
          <p>Welcome, <%=current_user.email%></p>
          <form class="logout" action="<%=session_url%>" method="post">
            <%= auth_token %>
            <input type="hidden" name="_method" value="<%=:delete%>">
            <input class="submit-button" type="submit" name="" value="Log Out">
          </form>
        <% else %>
          <p><a class="button" href="<%=new_user_url%>">Sign Up</a></p>
          <p><a class="button" href="<%=new_session_url%>">Log In</a></p>
        <% end %>
      </section>
    </nav>

    <section class="main">
      <%= yield %>
    </section>
  </body>
</html>
